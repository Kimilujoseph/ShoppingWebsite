<% if(requestedProduct != null){%>
<h1 class="display-1 text-dark px-3 mt-3"><%-requestedProduct.Name %></h1>

<div class="container pt-3 px-3">
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/about">About</a>
        <span class="breadcrumb-item active" aria-current="page"><%- requestedProduct.Name %></span>
    </nav>
    
    
    
    <div class="row mt-5">
        <div class="col-12 col-md-4 category-products">
            <img src="/images/<%- requestedProduct.Image %>" alt="<%- requestedProduct.Name %>"  class="img-fluid stick-top" style="top: 20px;" loading="lazy">
        </div>

        <div class="col-12  col-md-8">
            <div class="row">
                <div class="col-12"><h1><% requestedProduct.Name%></h1></div>
                <div class="col-12" style="white-space:pre-line;">
                    <h4>Product Details</h4>
                    <p><%-requestedProduct.Description%></p>

                    <div><button class="btn btn-lg btn-outline-success"><%- requestedProduct.Price %></button>
                        <button class="btn btn-lg btn-outline-success mt-4"> Add Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    




</div>





<%}%>